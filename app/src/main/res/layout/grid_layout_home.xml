<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home"
    android:layout_margin="1dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    >
    <FrameLayout
        android:id="@+id/frame_layout_click_multi_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/loader_background_color2"
        android:translationZ="2dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/success_image_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_filled_check_circle_24"
            app:tint="@color/app_blue_variant" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/img_curry_powder_cumin"
          />
        <!--  tools:srcCompat="@tools:sample/avatars" -->

        <TextView
            android:id="@+id/tv_item_name_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="center"
            android:text="Name"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_category_name_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="center"
            android:text="Category"
            android:textStyle="normal"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_price_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_strike_offer"
                android:gravity="center"
                android:paddingRight="6dp"
                android:text="₹ 200"
                android:textStyle="bold"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_item_price_new_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:scaleType="center"
                android:text="₹ 2003"
                android:textStyle="bold"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_offer_price_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="center"
            android:text="66% Off"
            android:textStyle="bold"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>